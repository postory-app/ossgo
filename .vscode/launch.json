{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ui(chrome)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "chrome",
                "--web-renderer",
                "canvaskit",
                "--web-port",
                "1234"
            ]
        },
        {
            "name": "ui(server)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "web-server",
                "--web-renderer",
                "canvaskit",
                "--web-port",
                "8080",
                // "--web-hostname",
                // "0.0.0.0"
            ]
        },
        {
            "name": "ui(app)",
            "request": "launch",
            "type": "dart",
            // "flutterMode": "release",
            "program": "lib/main.dart",
        },
        {
            "name": "ui (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        }
    ]
}